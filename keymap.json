[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-w": "editor::SelectLargerSyntaxNode",
      "alt-w": "editor::Copy",
      "ctrl-y": "editor::Paste",
      "cmd-shift-g": "editor::SelectAllMatches",
      "ctrl-x ctrl-s": "workspace::Save",
      "ctrl-x k": "pane::CloseActiveItem",
      "ctrl-x f": "file_finder::Toggle",
      "cmd-b": "editor::GoToDeclaration",
      "cmd-d": "editor::DuplicateLineDown"
    }
  }
]
